<div class="list-groups">
  {% assign awards = data[1] | sort: 'date' | reverse %}
  {% for award in awards %}
    <div class="list-group col-md-6">
      <table class="table-cv list-group-table">
        <tbody>
          <tr>
            <td class="list-group-category">
              <b>{{ award.title }}</b>
            </td>
            <td class="list-group-date">{{ award.date }}</td>
          </tr>
          <tr>
            <td colspan="2" class="list-group-summary">
              {% if award.awarder %}
                <b>{{ award.awarder }}</b><br>
              {% endif %}
              {{ award.summary }}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
